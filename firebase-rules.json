{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid",
        "shared_canvases": {
          "$canvasId": {
            ".write": "auth != null && $uid === auth.uid"
          }
        }
      }
    },
    "shared_canvases": {
      "$canvasId": {
        ".read": "auth != null && (data.child('owner').val() === auth.uid || data.child('participants').child(auth.uid).exists() || data.child('shareSettings').child('allowPublicAccess').val() === true)",
        ".write": "(auth != null) && ((!data.exists() && newData.child('owner').val() === auth.uid) || (data.exists() && data.child('owner').val() === auth.uid))",
        "participants": {
          "$participantId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid || ($participantId === auth.uid && (!data.exists() || newData.child('role').val() === data.child('role').val())))"
          }
        },
        "notes": {
          ".validate": "newData.hasChildren()",
          "$noteId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).child('role').val() === 'editor' || root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid)",
            ".validate": "newData.hasChildren(['content', 'x', 'y', 'width', 'height', 'color', 'createdAt', 'userId'])"
          }
        },
        "images": {
          ".validate": "newData.hasChildren()",
          "$imageId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).child('role').val() === 'editor' || root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid)"
          }
        },
        "files": {
          "$fileId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).child('role').val() === 'editor' || root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid)"
          }
        },
        "presence": {
          "$userId": {
            ".write": "$userId === auth.uid"
          }
        }
      }
    },
    "share_tokens": {
      "$token": {
        ".read": "auth != null",
        ".write": "(auth != null) && ((!data.exists() && newData.child('createdBy').val() === auth.uid) || (data.exists() && data.child('createdBy').val() === auth.uid))",
        ".validate": "newData.hasChildren(['canvasId','createdBy','createdAt','role']) && (newData.child('role').val() === 'viewer' || newData.child('role').val() === 'editor')"
      }
    }
  }
}
